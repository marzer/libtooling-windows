{
	"prettier.useTabs": true,
	"prettier.tabWidth": 4,
	"editor.rulers": [120],
	"editor.formatOnSave": true,
	"files.eol": "\n",
	"python.formatting.provider": "yapf",
	"html.format.indentInnerHtml": true,
	"files.exclude": {
		"**/__pycache__": true,
		"**/build": true,
		"**/*.egg-info": true
	},
	"[cpp]": {
		"editor.formatOnSave": true
	},
	"mesonbuild.configureOnOpen": false
}
